EXPORT=SPLIT.IN:SENTENCE
EXPORT=SETSCORE.OUT:OUT

# Configuration
'sentence' -> KEY ExtractSentence(objects/ExtractProperty)
'score' -> KEY ExtractScore(objects/ExtractProperty)
'score' -> PROPERTY SetScore(objects/SetPropertyValue)
'20' -> OPTION RelevanceByLength(teaser/RelevanceByLength)

# Evaluate Score By Position in Full Text
Split(core/Split) OUT -> IN ExtractSentence() OUT -> IN RelevanceByLength()
#Split(core/Split) OUT -> IN Counter(packets/Counter)
#Counter() OUT -> IN Drop(core/Drop)
#Counter() COUNT -> IN Display(core/Output) OUT -> IN RelevanceByLength()


# Update Score
Split() OUT -> IN ExtractScore()
RelevanceByLength() OUT -> ADDEND Add(math/Add)
ExtractScore() OUT -> AUGEND Add()

# Update IP
Split() OUT -> IN SetScore()
Add() SUM -> VALUE SetScore()
